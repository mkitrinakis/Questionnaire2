@model Questionnaire2.Models.QuestionnaireModelA



@foreach (Questionnaire2.Models.QuestionnaireModelA.TableQuestion tableQuestion in Model.TableQuestions)
{
<div class="row">
    <div class="col-md-12">

    </div>
</div>
<table class="qTable">
    <tr>
        <td width="15%">&nbsp&nbsp&nbsp </td>
        <td width="15%">&nbsp&nbsp&nbsp </td>

        @foreach (KeyValuePair<int, string> descr in ((Dictionary<int, string>) Model.GetType().GetProperty(tableQuestion.options).GetValue(Model)))
        {
            <td width="10%">
                <label class="control-label">@descr.Value</label>
            </td>

        }
    </tr>
    @foreach (Questionnaire2.Models.QuestionnaireModelA.TableQuestionRow row in tableQuestion.rows)
    {
        string label = ((string)Model.GetType().GetProperty(row.label).GetValue(Model));
        KeyValuePair<int,string> options= ((KeyValuePair<int, string>)Model.GetType().GetProperty(row.options).GetValue(Model));
<tr>
    <td>@Html.DisplayFor(model => label.Split("#", StringSplitOptions.RemoveEmptyEntries)[0])</td>
    <td>@Html.DisplayFor(model => label.Split("#", StringSplitOptions.RemoveEmptyEntries)[1])</td>
 
    @foreach (KeyValuePair<int, string> descr in ((Dictionary<int, string>)Model.GetType().GetProperty(row.options).GetValue(Model)))
    {
        <td>
            @Html.RadioButtonFor(model => model.GetType().GetProperty(row.options), descr.Key, Model.Q1101.Equals(descr.Key) ? new { @checked = "checked", onchange = "hide('Q1101OptionsOther');" } : new { @checked = "", onchange = "hide('Q1101OptionsOther');" })
        </td>
    }
    <td>
        @Html.RadioButtonFor(model => model.Q1101, 5, Model.Q1101.Equals(5) ? new { @checked = "checked", onchange = "show('Q1101OptionsOther');" } : new { @checked = "", onchange = "show('Q1101OptionsOther');" })
    </td>
</tr>
        
    }
   
</table>
<hr />
}



